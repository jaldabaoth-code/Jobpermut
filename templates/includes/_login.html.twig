<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="formLogin" aria-hidden="true">
    <form id="formLogin" action="{{ path('app_login') }}" method="post">
        <div class="modal-dialog">
            <div class="modal-content">
                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                    <input type="hidden" class="error">
                {% endif %}
                <div class="modal-header">
                    <h2 class="modal-title h4" id="exampleModalLabel">Se connecter</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="px-3">
                        <label for="inputEmail">Email</label>
                        <input type="email" name="email" class="form-control shadow-sm p-2 mb-1 bg-white rounded fw-light" id="inputEmail" autocomplete="email" required autofocus>
                    </div>
                    <div class="px-3">
                        <label class="mt-3" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" class="form-control shadow-sm p-2 mb-1 bg-white rounded fw-light" id="inputPassword" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                <div class="d-flex flex-column justify-content-center align-items-center p-2">
                    <button class="btn btn-lg btn-primary col-11 mb-2" type="submit">
                        Se connecter
                    </button>
                    <a href="{{ path('app_register') }}" class="btn btn-lg btn-warning col-11 mb-4">Pas encore inscrit ?</a>
                </div>
            </div>
        </div>
    </form>
</div>
