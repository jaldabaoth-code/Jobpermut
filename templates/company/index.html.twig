{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block title %}Gestion d'entreprise
{% endblock %}

{% block body %}
    <main class="py-2">
        <div class="page-title">
            <h1 class="h1 text-center py-1">Gestion entreprises</h1>

            <h2 class="h3 text-center py-1">Supprimer ou acc√©der aux comptes entreprises</h2>
        </div>
        <div class="row m-0 p-0">
            <div class="col-6 d-flex justify-content-start m-0">
                <a href="{{ path('admin_index') }}" class="btn btn-primary m-1">Accueil</a>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <a href="{{ path('company_new') }}" class="btn btn-primary m-1">Nouvelle entreprise</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table table-hover">
                <thead class="table-dark">
                    <tr>
                        <div class="d-flex justify-content-center">
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Code</th>
                            <th>Actions</th>
                        </div>
                    </tr>
                </thead>
                <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>{{ company.id }}</td>
                            <td>{{ company.name }}</td>
                            <td>{{ company.address }}</td>
                            <td>{{ company.code }}</td>
                            <td>
                                <a href="{{ path('company_show', {'id': company.id}) }}" class="btn fas fa-eye text-primary"></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Il n'y a aucune entreprise</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </main>
{% endblock %}
